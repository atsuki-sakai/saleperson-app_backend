generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id                   String     @id @default(uuid())
  storeId              String     @unique @map("store_id")
  chatApiKey           String?    @map("chat_api_key")
  workflowApiKey       String?    @map("workflow_api_key")
  systemPrompt         String?    @map("system_prompt")
  storePrompt          String?    @map("store_prompt")
  iconUrl              String?    @map("icon_url")
  tone                 String?
  blockingKeywords     String?    @map("blocking_keywords")
  datasetId            String?    @map("dataset_id")
  chatColor            String?    @map("chat_color")
  faqContent           String?    @map("faq_content")
  metaFieldDescription String?    @map("meta_field_description")
  createdAt            DateTime   @default(now()) @map("created_at")
  updatedAt            DateTime   @updatedAt @map("updated_at")
  documents            Document[]

  @@map("Store")
}

model Document {
  id        String   @id @default(uuid())
  name      String
  text      String
  storeId   String   @map("store_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  store     Store    @relation(fields: [storeId], references: [id])

  @@map("Document")
}
